# http://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf

[*.{kt,kts,java}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,xml,xsd}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
